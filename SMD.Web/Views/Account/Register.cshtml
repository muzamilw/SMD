@model SMD.Models.IdentityModels.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <div class="input-group">
        <span class="input-group-addon" tabindex="-1"><i class="fa fa-user"></i></span>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email address" })
    </div>
    <div class="input-group">
        <span class="input-group-addon" tabindex="-1"><i class="fa fa-user"></i></span>
        @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", placeholder = "Full Name" })
    </div>
    <div class="input-group">
        <span class="input-group-addon" tabindex="-1"><i class="fa fa-key"></i></span>
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
    </div>
    <div class="input-group">
        <span class="input-group-addon" tabindex="-1"><i class="fa fa-key"></i></span>
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password" })

        <input type="hidden" name="myHiddenInput" id="myHiddenInput" value="@Model.CompanyId" />
    </div>
    <div class="row">
        <div class="col-xs-12">
            <input type="submit" value="Register" class="btn btn-success col-xs-12">
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <p class="social-text">
                Or Register with
            </p>
        </div>
    </div>
}
<div class="row">
    @Html.Partial("~/Views/Shared/_ExternalLoginPartial.cshtml")
</div>
@section Scripts{
   
    <script>
        function getParameter(url, param) {
            if (url.indexOf('?') == -1)
                return 1;
            url = url.split('?');
            var pattern = new RegExp(param + '=(.*?)(;|&|$)', 'gi');
            return url[1].split(pattern)[1];
        }

        $(document).ready(function () {
            var value = getParameter(window.location.href, "CompanyId")
            alert(value);

        });


    </script>




}
