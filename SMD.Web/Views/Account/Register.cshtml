@model SMD.Models.IdentityModels.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

@section styleoverride{

    <style>
        #login-full-wrapper {
            background: url(/images/commute.jpg) no-repeat center center;
            background-size:100%;
        }

    </style>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <h4>Create Free Deals</h4>

    <div class="input-group">
        <span class="input-group-addon" tabindex="-1"><i class="fa fa-user"></i></span>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email address" })
    </div>
    <div class="input-group">
        <span class="input-group-addon" tabindex="-1"><i class="fa fa-user"></i></span>
        @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", placeholder = "Full Name" })
    </div>
    <div class="input-group">
        <span class="input-group-addon" tabindex="-1"><i class="fa fa-key"></i></span>
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
    </div>
    <div class="input-group">
        <span class="input-group-addon" tabindex="-1"><i class="fa fa-key"></i></span>
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password" })


    </div>
    <div class="row">
        <div class="col-xs-12">
            <input type="submit" value="Register" class="btn btn-success col-xs-12">
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <p class="social-text">
                Or Register with
            </p>
        </div>
    </div>
}
<div class="row">
    @Html.Partial("~/Views/Shared/_ExternalLoginPartial.cshtml")
</div>
<br />
<div class="row">
    <div class="col-xs-12">
        <div class="create-account text-center">
            <p>
               Already have an account ?

                <a class="btn btn-darkgray col-xs-12" style="color:white;margin-top:10px;" href="~/Account/Login">Login</a>
            </p>
        </div>
    </div>
</div>

@section Sidebar{
    
    <div style="margin-top:120px;text-align:center" id="registersidebar">
        <h1 style="color:white">The advertising platform <br />run by you!</h1>
        @*<img style="width:500px;margin-top:60px;" src="~/Images/New_Register_Image.png" />*@
        @*<p style="font-style:italic; color:black;margin-top:60px;font-size:1.6em;">We don't do BOTS - people to people advertising platform</p>*@
    </div>
}






