    <meta name="author" content="" />
    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <meta name="application-name" content="" />

    <!-- Mobile Specific Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Le styles -->
    <link href="../Content/CSS/bootstrap/bootstrap.css" rel="stylesheet" />
    <link href="../Content/CSS/bootstrap/bootstrap-responsive.css" rel="stylesheet" />
    <link href="../Content/CSS/supr-theme/jquery.ui.supr.css" rel="stylesheet" type="text/css"/>
    <link href="../Content/CSS/icons.css" rel="stylesheet" type="text/css" />
    <link href="../Scripts/Plugins/forms/uniform/uniform.default.css" type="text/css" rel="stylesheet" />

    <!-- Main stylesheets -->
