@model SMD.Models.IdentityModels.ViewModels.LoginViewModel
@using (Html.BeginForm("Login", "Account"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <h4>Manage your campaigns</h4>
    <div class="input-group">
        <span class="input-group-addon" tabindex="-1"><i class="fa fa-user"></i></span>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email address" })
    </div>
    <div class="input-group">
        <span class="input-group-addon" tabindex="-1"><i class="fa fa-key"></i></span>
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
    </div>
    <div id="remember-me-wrapper">
        <div class="row">
            <div class="col-xs-6">
                @*<div class="checkbox-nice">
                    <input type="checkbox" id="remember-me" checked="checked" />
                    <label for="remember-me">
                        Remember me
                    </label>
                </div>*@
            </div>
            @Html.ActionLink("Forgot password?", "ForgotPassword", null, new { @id = "login-forget-link", @class = "col-xs-6" })
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <button type="submit" class="btn btn-success col-xs-12">
                Sign In
            </button>
        </div>
    </div>
}
