<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <script src="~/Scripts/jquery-2.1.0.min.js"></script>
    <script src="~/Scripts/jquery.blockUI.js"></script>
    <link rel="stylesheet" href="~/Content/themes/Centaurus/css/libs/fullcalendar.css" type="text/css" />
    <link rel="stylesheet" href="~/Content/themes/Centaurus/css/libs/fullcalendar.print.css" type="text/css" media="print" />
    @Styles.Render("~/Content/themes/Centaurus/css/bundleCentaurus/css")
    @* commentss *@
    @* If Debuggin is Enabled then pick css *@
    @if (HttpContext.Current.IsDebuggingEnabled)
    {
        <link href="~/Content/less/MainSite.css" rel="stylesheet" />
    }
    else
    {
        @Styles.Render("~/Bundle/AppLess")
    }

    @Styles.Render("~/Bundles/BaseCss")
    @Styles.Render("~/Content/themes/base/css")
    <style>
        .th-pointer {
            cursor: pointer
        }
    </style>
    <link type="image/x-icon" href="favicon.png" rel="shortcut icon" />
    <link href='//fonts.googleapis.com/css?family=Open+Sans:400,600,700,300|Titillium+Web:200,300,400' rel='stylesheet' type='text/css'>
    <!--[if lt IE 9]>
        <script src="js/html5shiv.js"></script>
        <script src="js/respond.min.js"></script>
    <![endif]-->
</head>
<body class="theme-blue-gradient">

    <header class="navbar" id="header-navbar">
    <div class="col-md-12 col-lg-12 col-sm-12" style="height: 4px; background-color: #fc813b; position: absolute; margin-top: 50px;"></div>

        <div class="container">

            <a href="~/Dashboard/Index" id="header" class="my-navigator navbar-brand">
                Sell My Data
                @*<img src="~/Content/themes/Centaurus/img/logo.png" id="header-logo" alt="" class="normal-logo logo-white" height="25" style="margin-top:5px;" />*@
                @*<img src="~/Content/themes/Centaurus/img/mpc_beta.jpg" id="header-logo-beta" alt="" class="normal-logo logo-white" height="18" style="margin-top:5px;margin-left:10px;" />*@
            </a>

            <div class="clearfix">

                <button class="navbar-toggle" data-target=".navbar-ex1-collapse" data-toggle="collapse" type="button">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="fa fa-bars"></span>
                </button>
                <div class="nav-no-collapse navbar-left pull-left hidden-sm hidden-xs">
                    <ul class="nav navbar-nav pull-left">
                        <li>
                            <a class="btn" id="make-small-nav">
                                <i class="fa fa-bars"></i>
                            </a>
                        </li>
                    </ul>
                </div>


                <div class="nav-no-collapse pull-right" id="header-nav">
                    <ul class="nav navbar-nav pull-right">
                        <li class="dropdown profile-dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <span class="hidden-xs">
                                    @if (User != null && User.Identity != null)
                                    {
                                        @User.Identity.Name
                                    }
                                </span> <b class="caret"></b>
                                <div class="user-positioner" style="position:fixed;">

                                </div>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="#">Profile</a></li>
                                <li><a href="~/Account/LogOff"><i class="fa fa-power-off"></i>Logout</a></li>
                            </ul>
                        </li>
                        <li class="hidden-xxs">
                            <a class="btn" href="~/Account/LogOff">
                                <i class="fa fa-power-off"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

    </header>
  
    <div id="page-wrapper" class="container">
        
        <div class="row">
            <div id="nav-col" style="margin-top: 4px;">


                @*<a id="menu-logo" href="~/Dashboard/Index">
                        <img src="~/Content/themes/Centaurus/img/logo.png" alt="" class="normal-logo logo-white" height="30" width="180" style="margin-left:17px;margin-top:50px;margin-bottom:50px;" />
                    </a>*@
                <section id="col-left" class="col-left-nano">
                    @if (User != null && User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <div id="col-left-inner" class="col-left-nano-content">

                            @RenderSection("leftmenue", required: false)

                            @* left menue starts here*@
                            <div class="collapse navbar-collapse navbar-ex1-collapse" id="sidebar-nav">
                                <ul class="nav nav-pills nav-stacked" id="Navigation-bar">
                                    <li id="lidashboard">
                                        <a href="~/Dashboard/Index" class="my-navigator" id="anchor-dashboard">
                                            <i class="fa fa-dashboard"></i>
                                            <span>Profile Question</span>
                                        </a>

                                    </li>
                                    <li id="licrm">
                                        <a href="~/CRM/Home/Contacts" class="my-navigator">
                                            <i class="fa fa-users"></i>
                                            <span>Survey Question</span>
                                        </a>
                                    </li>
                                    <li id="listores">
                                        <a href="~/Ads/Ads/Index" class="my-navigator">
                                            <i class="fa fa-th-large"></i>
                                            <span>Ad Campaigns</span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            @* Left menue ends here*@
                        </div>
                    }
                </section>
            </div>
            @*content wrapper goes here*@
            <div id="content-wrapper">
                @RenderBody()
                <div id="spinner" style="display: none">
                </div>
                <div id="siteUrl">
                </div>
                <footer id="footer-bar" class="row">
                    <p id="footer-copyright" class="col-xs-12">
                        &copy; @DateTime.Now.Year Powered by <a href="http://www.myprintcloud.com/" target="_blank">SMD</a>
                    </p>
                </footer>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")

    <script>

        (function ($) {
            $("#siteUrl").val("@(Request.ApplicationPath == " / " ? " / " : Request.ApplicationPath)");
        })($);

    </script>

    @Scripts.Render("~/Bundle/BaseLibs")
    <script src="~/Content/themes/Centaurus/js/fullcalendar.min.js"></script>
    @Scripts.Render("~/Bundle/CentaurusLibs")
    <script>
        $(document).ready(function () {
            $("#make-small-nav").click(function () {
                $("#header-logo").toggle();
                $("#menu-logo").toggle();
            });
            

        });
    </script>

    @RenderSection("scripts", required: false)

</body>
</html>
