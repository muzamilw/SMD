                                <div class="user-positioner" style="position:fixed;">
                                </div>
                            </a>
                            <ul class="dropdown-menu loginMenu">
                                @*<li><a href="">Ad Campaigns</a></li>
                                <li class="inlineMenuItem" style="display:none;"><a href="~/Ads/Ads">&nbsp;&nbsp;Create Ad Campaigns</a></li>
                                <li class="inlineMenuItem"><a href="~/Ads/Ads">&nbsp;&nbsp;View Ad Campaigns</a></li>
                                <li><a href="">Survey Slides</a></li>
