                <div id="bindingPhrasePartialViews">
                    @{
                        Html.RenderPartial("~/Areas/Common/Views/Shared/_phraseLibrary.cshtml");
                    }
                </div>

                <div id="bindingUserProfilePartialViews">
                    @{
                        Html.RenderPartial("~/Areas/Common/Views/Shared/_UserProfile.cshtml");
