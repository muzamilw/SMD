    <!-- ko stopBinding: true -->
    @Html.Partial("~/Areas/Common/Views/Shared/_ConfirmationDialog.cshtml")
    <!-- /ko -->
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <script>

        (function ($) {
            $("#siteUrl").val("@(Request.ApplicationPath == " / " ? " / " : Request.ApplicationPath)");
        })($);


        function collapseMainMenu() {
           
            $('#topArea').collapse('hide');
        }


        function showMainMenu() {

            $('#topArea').collapse('show');
        }

    </script>
    @Scripts.Render("~/Bundle/BaseLibs")
    <script src="~/Content/themes/Centaurus/js/fullcalendar.min.js"></script>
    @Scripts.Render("~/Bundle/CentaurusLibs")
    <script>

        require(["common/confirmation.view"]);
        require(["Layout/Layout.view"]);
        require(["PhraseLibrary/phraseLibrary.view"]);
        require(["common/userProfile.view"]);
      
        $(document).ready(function () {
            $("#make-small-nav").click(function () {
                $("#header-logo").toggle();
                $("#menu-logo").toggle();
            });

            $('#topArea').collapse();
            
            $("#btnPhraseLibrary").click(function () {
                $("#btnPhraseLibrary").css("background-color", "#93bf47");
            });
          
            $("#phrase-libraryCloseButton").click(function () {
                $("#btnPhraseLibrary").css("background-color", "#7f8c8d");
                $("#btnPhraseLibrary").css("border-color", "#5c6667");
            });
            $(".close").click(function () {
                $("#btnPhraseLibrary").css("background-color", "#7f8c8d");
                $("#btnPhraseLibrary").css("border-color", "#5c6667");
            });
            
        });
    </script>
