        require(["common/confirmation.view"]);
        require(["Layout/Layout.view"]);
        require(["PhraseLibrary/phraseLibrary.view"]);
        require(["common/userProfile.view"]);
        require(["common/companyProfile.view"]);

        $(document).ready(function () {
            $("#make-small-nav").click(function () {
                $("#header-logo").toggle();
