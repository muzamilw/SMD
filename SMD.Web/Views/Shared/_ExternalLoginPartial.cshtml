@using (Html.BeginForm("ExternalLogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl }))
{
    @Html.AntiForgeryToken()
    <div class="col-xs-12 col-sm-6">
        <button type="submit" name="provider" value="Google" title="Log in using your Google account" class="gPlusBtn">
            <i class="fa fa-google-plus "></i>
        </button>
        <button type="submit" name="provider" value="Facebook" title="Log in using your Facebook account" class="fbBtn">
            <i class="fa fa-facebook "></i>
        </button>
    </div>
}
