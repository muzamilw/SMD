@{
    ViewBag.Title = "Invoice";
}

<div class="row" id="InvoiceLVBindingSpot">
    <div class="col-lg-12" data-bind="visible: !$root.isEditorVisible()">
        <div class="row">
            <div class="col-lg-12"style="padding-right: 27px;">
                <ol class="breadcrumb" style="display:none">
                    <li><a href="~/Dashboard/Index">&nbsp;</a></li>
                </ol>
                <div class="clearfix" style="margin-left:-5px;margin-bottom:10px;">
                    <span style="font-size: 24px;color: #ffffff">Invoice History</span>
                    <div style="float:right;margin-top:7px; margin-right:-8px;">
                        <img src="/Content/Images/Close_Button.png" data-bind="click:$root.onCloseClick" style="width:20px;height:20px;float:right;cursor:pointer;">
                    </div>
                    @*<h1 class="pull-left" style="padding-left:0px;">Invoice History</h1><br />*@
                    <span style="font-size: 14px; margin-left:10px; color: #ffffff">Below is a list of all Invoices that were charged and collected from your credit cards for running your campaigns.</span>
                </div>
                <!-- ko template: { name: 'filterTemplate' } -->
                <!-- /ko -->
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12" style="padding-left:0px;padding-right:19px;">
                <div class="main-box no-header clearfix">
                    <div class="main-box-body clearfix">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="invoiceLVTable">
                                <thead>
                                    <tr>
                                        <th class="col-lg-1 th-pointer"><span id="1">Date<span class="icon-up"></span></span></th>
                                        <th class="col-lg-1 th-pointer"><span id="2">Invoice Id<span></span></span></th>
                                        <th class="col-lg-2 th-pointer"><span id="3">Credit Card Ref<span></span></span></th>
                                        <th class="col-lg-1 th-pointer"><span id="4">Total<span></span></span></th>
                                        <th class="col-lg-1">&nbsp;</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- ko template: { name: 'invoiceVTemplate' , foreach: invoices } -->
                                    <!-- /ko -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div id="pagerDivForStore" class="pull-right">
                    <!-- ko with: pager -->
                    @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
                    <!-- /ko -->
                </div>
            </div>
        </div>


        <script id="invoiceVTemplate" type="text/html">
            <tr style="cursor: pointer">
                <td>
                    <p data-bind="dateString : invoDate, datePattern: 'DD/MM/YYYY'"></p>
                </td>
                <td>
                    <p data-bind="text:id"></p>
                </td>
                <td>
                    <p data-bind="text : refrence"></p>
                </td>
                <td>
                    <p data-bind="text: invoiceTotal"></p>
                </td>
            
                <td>
                    <a class="table-link" style="float: right">
                        <span class="fa-stack">
                            <i class="fa fa-square fa-stack-2x"></i>
                            <i class="fa fa-pencil fa-stack-1x fa-inverse" data-bind="click:$root.onEditInvoice"></i>
                        </span>
                    </a>
                </td>
            </tr>
        </script>
        <script id="filterTemplate" type="text/html">
            <div class="row filter-body" style=" margin-bottom: 8px;">
                <form data-bind="">
                    <div class="filter-block">
                        <div class="form-group">
                            <div class="col-lg-3" >
                                <label>From</label>
                                <input type="text" class="form-control" data-bind="datetimepicker:$root.fromDateFilter">
                            </div>
                            @*<div class="col-xs-2"style="padding:0;">
                               
                            </div>*@
                            <div class="col-lg-3">
                                <label>To</label>
                                <input type="text" class="form-control" data-bind="datetimepicker:$root.toDateFilter">
                            </div>
                            @*<div class="col-xs-2">
                               
                            </div>*@
                            <div class="col-xs-2" style="margin-top:24px;margin-right:-20px;">
                                <button class="btn  btn-info" id="saveBtn" data-bind="click:$root.onSearchButtonClick">Search</button>
                                <button class="btn btn-default" id="saveBtn" data-bind="click:$root.resetData">Reset</button>
                              
                            </div>
                            <div class="col-lg-4" style="margin-top:24px;padding-left:0px;padding-right:0px;margin-right:-9px !important" data-bind="visible:$root.StripeSubscriptionStatus()!=null">
                                <div class="col-lg-6" style="padding-left:0px;margin-top:5px;margin-right:-37px;">
                                    <span style="margin-top:24px;font-size:13px;color:gray">Your deal subscription status:</span>
                                </div>
                                <div class="col-lg-3" style="margin-top:0px;padding-left:0px;text-align:center">
                                    <label data-bind="text:$root.StripeSubscriptionStatus,css:{activeclor:$root.StripeSubscriptionStatus()=='active',cancelcolor: $root.StripeSubscriptionStatus()=='canceled'}" style="font-size:medium;font-weight:bold;margin-top:4px;text-transform:capitalize"></label>
                                </div>
                                <div class="col-lg-2 pull-right" style="margin-right:-28px;">
                                    <button class="btn btn-danger pull-right" id="saveBtn" data-bind="click:$root.onSaveSub,visible:$root.StripeSubscriptionStatus()=='active'">Cancel Subscription</button>
                                </div>

                            </div>
                            <div class="col-lg-4 pull-right" style="margin-top:7px;padding-left:0px;padding-right:0px;" data-bind="visible:$root.StripeSubscriptionStatus()==null">
                                <span class="pull-right" style="margin-top:24px;font-size:13px;color: red">You are not subscribed for deals</span>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </script>
    </div>
    @{
        Html.RenderPartial("~/Areas/Billing/Views/Manage/_InvoiceDetail.cshtml");
    }
</div>



<!-- ko stopBinding: true -->
@Html.Partial("~/Areas/Common/Views/Shared/_ConfirmationDialog.cshtml")
<!-- /ko -->
@section Scripts{
    <script type="text/javascript">
        require(["invoice/invoice.view", "common/confirmation.view"]);
        $("#MarketobjDiv").css("display", "none");
        $("#topArea").css("display", "none");
        $("#panelArea").css("display", "none");
    </script>

}
