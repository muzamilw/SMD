@{
    ViewBag.Title = "Invoice";
}

<div class="row" id="EmailBindingSpot">

    <div class="col-lg-12" data-bind="visible: !$root.isEditorVisible()">
        <div class="row">
            <div class="clearfix" style="margin-left:-5px;margin-bottom:3px;">
                <div class="col-lg-7">
                    <span style="font-size: 24px;color: #ffffff">System Emails</span>
                    <span style="font-size: 14px; margin-left:10px; color: #ffffff">Below is a list of all System Emails.</span>
                </div>
                <div class="col-lg-5">
                    <div style="float:right;margin-top:7px; margin-right:10px;">
                        <img src="/Content/Images/Close_Button.png" data-bind="click:$root.onCloseClick" style="width:20px;height:20px;float:right;cursor:pointer;">
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12" style="padding-left:0px;padding-right:19px;">
                <div class="main-box no-header clearfix">
                    <div class="main-box-body clearfix">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="emailLVTable">
                                <thead>
                                    <tr>
                                        <th class="col-lg-3 th-pointer"><span id="1">Title<span class="icon-up"></span></span></th>
                                        <th class="col-lg-2 th-pointer"><span id="2">From Email<span></span></span></th>
                                        <th class="col-lg-3 th-pointer"><span id="3">From Name<span></span></span></th>
                                        <th class="col-lg-3 th-pointer"><span id="4">Subject<span></span></span></th>
                                        <th class="col-lg-1">&nbsp;</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- ko template: { name: 'invoiceVTemplate',foreach:emails } -->
                                    <!-- /ko -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div id="pagerDivForStore" class="pull-right">
                    <!-- ko with: pager -->
                    @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
                    <!-- /ko -->
                </div>
            </div>
        </div>


        <script id="invoiceVTemplate" type="text/html">
            <tr style="cursor: pointer">
                <td>
                    <p data-bind="text:Title"></p>
                </td>
                <td>
                    <p data-bind="text:FromEmail"></p>
                </td>
                <td>
                    <p data-bind="text:FromName"></p>
                </td>
                <td>
                    <p data-bind="text:Subject"></p>
                </td>

                <td>
                    <a class="table-link" style="float: right">
                        <span class="fa-stack">
                            <i class="fa fa-square fa-stack-2x"></i>
                            <i class="fa fa-pencil fa-stack-1x fa-inverse" data-bind="click:$root.onEditEmail"></i>
                        </span>
                    </a>
                </td>
            </tr>
        </script>
    </div>

    <div data-bind="visible: $root.isEditorVisible()" style="display: none">
        <div class="col-lg-12">
            <div class="row" id="user-profile">
                <div class="col-lg-12 col-md-8 col-sm-8" style="padding-bottom: 10px;">
                    <div class="clearfix ">
                        <div class="col-xs-12" style="text-align: right; padding-right:23px;margin-bottom:1px; margin-top:10px;">
                            <div style="float:right;margin-top:-9px;"><img data-bind="click: $root.closeEditDialog" src="/Content/Images/Close_Button.png" style="width:20px;height:20px;float:right;cursor:pointer;"></div>
                            @*<button class="btn btn-default" id="saveBtn" data-bind="click: $root.closeEditDialog">Close</button>*@
                        </div>
                    </div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12" style="margin-left:8px;padding-right:41px;">
                    <div class="main-box clearfix" id="tabsHeader">
                        <div class="tabs-wrapper profile-tabs">
                  
                            <div class="tab-content">
                                <div class="tab-pane fade in active" id="tab-generalinfo">
                                    <div class="col-lg-12 form-horizontal">
                                        <h3 class="group-header" style="margin-top:20px;">
                                            E Mial Information
                                        </h3>
                                      
                                        <div data-bind="with: $root.selectedEmail">
                                            <div class="col-lg-9">
                                                <div class="form-group">
                                                    <div class="col-lg-4 text-right">
                                                        <label class="control-label text-right tooltip-float defaultImgUploadImageBtn">Title</label>
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <input type="text"  class="form-control" data-bind="value:Title">
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-lg-9" >
                                                <div class="form-group">
                                                    <div class="col-lg-4 text-right">
                                                        <label class="control-label text-right tooltip-float defaultImgUploadImageBtn">Name</label>
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <input type="text"  class="form-control" data-bind="value: FromName">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-9">
                                                <div class="form-group">
                                                    <div class="col-lg-4 text-right">
                                                        <label class="control-label text-right tooltip-float defaultImgUploadImageBtn">From Email</label>
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <input type="text" class="form-control" data-bind="value: FromEmail">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-9" >
                                                <div class="form-group">
                                                    <div class="col-lg-4 text-right">
                                                        <label class="control-label text-right tooltip-float defaultImgUploadImageBtn">Subject</label>
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <input type="text" class="form-control" data-bind="value: Subject">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-9">
                                                <div class="form-group">
                                                    <div class="col-lg-4 text-right">
                                                        <label class="control-label text-right tooltip-float defaultImgUploadImageBtn">Email Body</label>
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <textarea type="text" class="form-control" style="min-height:200px;" data-bind="value: Body"></textarea>
                                                        
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-9">
                                                <div class="form-group">
                                                    <div class="col-lg-4 text-right">
                                                        <label class="control-label text-right tooltip-float defaultImgUploadImageBtn">Target Email</label>
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <input type="text"  class="form-control" data-bind="value: EmailTarget">
                                                    </div>
                                                </div>
                                            </div>
                                      


                                            <div class="col-lg-12 col-md-12 col-sm-12">
                                               

                                                    <div class="col-lg-9">
                                                        <div class="form-group">
                                                            <div class="col-lg-4 text-right">
                                                            </div>
                                                            <div class="col-lg-6">
                                                                <button class="btn btn-success" id="saveBtn" data-bind="click:$root.onUpdateEmail">Update</button>

                                                            </div>
                                                        </div>
                                                    </div>
                                                
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<!-- ko stopBinding: true -->
@Html.Partial("~/Areas/Common/Views/Shared/_ConfirmationDialog.cshtml")
<!-- /ko -->
@section Scripts{
    <script type="text/javascript">
        require(["invoice/Email.view", "common/confirmation.view"]);
        $("#MarketobjDiv").css("display", "none");
        $("#topArea").css("display", "none");
        $("#panelArea").css("display", "none");
    </script>

}
