@{
    ViewBag.Title = "Invoice Details";
}
@section leftmenue {
}

<div data-bind="visible: $root.isEditorVisible()" style="display: none">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-12">
                <ol class="breadcrumb">
                    <li><a href="#" class="my-navigator">Home</a></li>
                    <li><a href="#" class="my-navigator">Invoice</a></li>
                </ol>
                <div class="tab-content dynamicNameHeading" style="height:41px;">
                    <h1>Details</h1>
                </div>
            </div>
        </div>
        <div class="row" id="user-profile">
            <div class="col-lg-12 col-md-8 col-sm-8" style="padding-bottom: 10px;">
                <div class="clearfix ">
                    <div class="col-xs-12" style="text-align: right; padding-right:0;margin-bottom:10px;">
                        <button class="btn btn-default" id="saveBtn" data-bind="click: $root.closeEditDialog">Close</button>
                    </div>
                </div>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="main-box clearfix" id="tabsHeader">
                    <div class="tabs-wrapper profile-tabs">
                        <ul class="nav nav-tabs">
                            <li class="active" id="generalInfoTab"><a href="#tab-generalinfo" data-toggle="tab">General Info</a></li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane fade in active" data-bind="with: $root.selectedInvoice" id="tab-generalinfo">
                                <div class="col-lg-12 form-horizontal">
                                    <h3 class="group-header" style="margin-top:20px;">
                                        Invoice Details
                                    </h3>
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <div class="col-lg-6">
                                                <img style="height: 100px; width: 350px; margin-left: 65px; margin-top: 12px;" src="~/Images/Cash4Ads_White_text.png" />
                                            </div>
                                            <div class="col-lg-6">
                                                <p style="text-align: left; font-size: 28px; text-align: left; font-weight: 600;" class="control-label col-lg-12 tooltip-float">Invoice</p>
                                                <div class="col-lg-12">
                                                    <p style="text-align: left; padding-left: 0px; float: left; " class="control-label tooltip-float col-lg-3">Invoice #</p>
                                                    <p style="text-align: left; padding-top: 9px; font-weight: bold; " class="col-lg-6" data-bind="text:id"></p>
                                                </div>
                                                
                                                <div class="col-lg-12">
                                                    <p style="text-align: left; padding-left: 0px; float: left; " class="control-label tooltip-float col-lg-3">Invoice Date</p>
                                                    <p style="text-align: left; padding-top: 9px; font-weight: bold;" class="col-lg-6" data-bind="dateString : invoDate, datePattern: 'DD/MM/YYYY'"></p>
                                                </div>
                                                 
                                                <div class="col-lg-12">
                                                    <p style="text-align: left; padding-left: 0px; float: left; " class="control-label tooltip-float col-lg-3">Invoice Amount</p>
                                                    <p style="text-align: left; padding-top: 9px; font-weight: bold; " class="col-lg-6" data-bind="text:invoiceTotal"></p>
                                                </div>
                                                <p style="color: green; text-align: left; font-weight: 700; font-size: medium;" class="control-label col-lg-12 tooltip-float">Paid</p>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <div class="col-lg-6">
                                                <p style="text-align: left; padding-top: 0px; text-align: left; " class="control-label col-lg-12 tooltip-float">Clydy Ltd t/a Cash4Ads</p>
                                                <p style="text-align: left; padding-top: 0px; text-align: left; " class="control-label col-lg-12 tooltip-float">268 Bath Road, Slough</p>
                                                <p style="text-align: left; padding-top: 0px; text-align: left; " class="control-label col-lg-12 tooltip-float">United Kingdom SL1 4DX</p>
                                                
                                                <p style="text-align: left; padding-top: 0px; text-align: left; " class="control-label col-lg-12 tooltip-float">Vat No : 164 4260 19</p>
                                                <p style="text-align: left; padding-top: 0px; text-align: left; " class="control-label col-lg-12 tooltip-float">UK : +44 1753 369 069</p>
                                                <div class="col-lg-12">
                                                    <p style="padding-left: 0px; text-align: left; padding-top: 0px; text-align: left; float: left; " class="control-label col-lg-2 tooltip-float">VAT Reg # :</p>
                                                    <p class="col-lg-6" style="font-weight: bold;" data-bind="text: refrence"></p>

                                                </div>
                                                <div class="col-lg-3">
                                                    <hr style="margin-bottom: 0px;" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="form-group" style="margin-bottom: 0px;">
                                            <div class="col-lg-12">
                                                <p style="text-align: left; padding-top: 0px; text-align: left; font-weight: bold; " class="control-label col-lg-12 tooltip-float">BILLED TO</p>
                                                <p style="text-align: left; padding-top: 0px; text-align: left; " class="control-label col-lg-12 tooltip-float" data-bind="text: user"></p>

                                                <div class="col-lg-12">
                                                    <hr style="margin-bottom: 0px;"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="col-lg-12">
                                        <div class="main-box no-header clearfix">
                                            <div class="main-box-body clearfix">
                                                <div class="table-responsive">
                                                    <table class="table" >
                                                        <thead>
                                                            <tr>
                                                                <th class="col-lg-6 th-pointer"><span id="1">DESCRIPTION</span></th>
                                                                <th class="col-lg-2 th-pointer"><span id="2">UNITS</span></th>
                                                                <th class="col-lg-2 th-pointer"><span id="3">UNIT PRICE</span></th>
                                                                <th class="col-lg-2 th-pointer"><span id="4">AMOUNT</span></th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <!-- ko if:  $root.selectedInvoice()!=undefined -->
                                                            <!-- ko template: { name: 'invoiceDEtailTemplate' , foreach: $root.selectedInvoice().invoiceDetails } -->
                                                            <!-- /ko -->
                                                            <!-- /ko -->
                                                            
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <div class="col-lg-12">
                                                <div class="col-lg-9" style="padding-right: 15px;">
                                                    <p style="text-align: left; padding-left: 0px; padding-top: 0px; text-align: right; float: right; font-weight: bold;" class="control-label col-lg-12 tooltip-float">Total</p>
                                                </div>
                                                <p style="padding-left: 78px; padding-top: 0px; text-align: left; " class="control-label col-lg-3 tooltip-float" data-bind="text:'$ '+invoiceTotal()"></p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <div class="col-lg-12">
                                                <div class="col-lg-9" style="padding-right: 15px;">
                                                    <p style="text-align: left; padding-left: 0px; padding-top: 0px; text-align: right; float: right" class="control-label col-lg-12 tooltip-float">Payments</p>
                                                </div>
                                                <p style="padding-left: 78px; padding-top: 0px; text-align: left; " class="control-label col-lg-3 tooltip-float" data-bind="text:'($'+invoiceTotal()+')'"></p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <div class="col-lg-12">
                                                <div class="col-lg-9" style="padding-right: 15px;">
                                                    <p style="text-align: left; padding-left: 0px; padding-top: 0px; text-align: right; float: right" class="control-label col-lg-12 tooltip-float">Amount due</p>
                                                </div>
                                                <p style="font-weight: bold; padding-left: 78px; padding-top: 0px; text-align: left; " class="control-label col-lg-3 tooltip-float">($0.00)</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <div class="col-lg-12">
                                                <div class="col-lg-2">
                                                    <p style="text-align: left; padding-left: 0px; padding-top: 0px; text-align: left; float: left; font-weight: bold;" class="control-label col-lg-12 tooltip-float">PAYMENT DETAILS</p>
                                                    <hr style=" margin-bottom: 0px;"/>
                                                </div>
                                                <div class="col-lg-11">
                                                    <label style="float: left; text-align: left; padding-top: 0px; text-align: left; " class="control-label  tooltip-float" data-bind="text:'$'+invoiceTotal()+' was paid on '"></label>
                                                    <label style="float: left; text-align: left; padding-top: 0px; text-align: left; font-weight: bold; " class="control-label tooltip-float" data-bind="dateString : invoDate, datePattern: 'DD/MM/YYYY'"></label>
                                                    <label style="float: left; text-align: left; padding-top: 0px; text-align: left; " class="control-label tooltip-float">&nbsp;by card ending 4015.</label>
                                                </div>
                                            </div>
                                            
                                            <div class="col-lg-12" style="margin-top: 10px">
                                                <div class="col-lg-2">
                                                    <p style="font-weight: bold; text-align: left; padding-left: 0px; padding-top: 0px; text-align: left; float: left" class="control-label col-lg-12 tooltip-float">NOTES</p>
                                                    <hr style=" margin-bottom: 0px;" />
                                                </div>
                                                <p style="text-align: left; padding-top: 0px; text-align: left; " class="control-label col-lg-12 tooltip-float">Thank you for business with us.</p>
                                            </div>
                                        </div>
                                     </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script id="invoiceDEtailTemplate" type="text/html">
    <tr style="cursor: pointer">
        <td>
            <p data-bind="text:name"></p>
        </td>
        <td>
            <p data-bind="text:'1'"></p>
        </td>
        <td>
            <p data-bind="text : grossAmount"></p>
        </td>
        <td>
            <p style="font-weight: bold;" data-bind="text: grossAmount"></p>
        </td>

    </tr>
</script>