@{
    ViewBag.Title = "Coupons For Approval";
}
<div class="row" id="CouponsApprovalBindingSpot">
    <div class="col-lg-12" data-bind="visible: !$root.isEditorVisible()">
        <div class="row">
            <div class="col-lg-12">
                <ol class="breadcrumb">
                    <li><a href="~/Dashboard/Index">&nbsp;</a></li>
                </ol>
                <div class="clearfix">
                    <h1 class="pull-left" style="padding-left:0px;">Coupons For Approval</h1>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="main-box no-header clearfix">
                    <div class="main-box-body clearfix">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="adCampaignApprovalLVTable">
                                <thead>
                                    <tr>
                                        <th class="col-lg-2 th-pointer"><span id="4">Submitted By<span></span></span></th>
                                        <th class="col-lg-2 th-pointer"><span id="4">Title<span></span></span> </th>
                                      
                                        @*<th class="col-lg-2 th-pointer"><span id="4">Swap Cost<span></span></span> </th>*@
                                        <th class="col-lg-2 th-pointer"><span id="5">Submission Date<span class="icon-up"></span></span></th>

                                        <th class="col-lg-1">&nbsp;</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- ko template: { name: 'adCampaignsLVTemplate' , foreach: coupons } -->
                                    <!-- /ko -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div id="pagerDivForStore" class="pull-right">
                    <!-- ko with: pager -->
                    @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
                    <!-- /ko -->
                </div>
            </div>
        </div>
        <script id="adCampaignsLVTemplate" type="text/html">
            <tr style="cursor: pointer" data-bind="click:$root.onEditCoupon">
                <td>
                    <p data-bind="text:submittedBy"></p>
                </td>
                <td>
                    <p data-bind="text:title"></p>
                </td>


                @*<td>
                    <p data-bind="text:swabCost"></p>
                </td>*@
                <td>
                    <p data-bind="dateString:submissionDate,datePattern: 'DD/MM/YYYY'"></p>
                    @*<p>Coupon</p>*@
                </td>
                <td>
                    <a class="table-link" style="float: right">
                        <span class="fa-stack">
                            <i class="fa fa-square fa-stack-2x"></i>
                            <i class="fa fa-pencil fa-stack-1x fa-inverse" data-bind="click:$root.onEditCoupon"></i>
                        </span>
                    </a>
                </td>
            </tr>
        </script>
    </div>
    @{
        Html.RenderPartial("~/Areas/Coupons/Views/Coupons/_couponEditor.cshtml");
    }
</div>
@*<!-- ko stopBinding: true -->
    @Html.Partial("~/Areas/Common/Views/Shared/_ConfirmationDialog.cshtml")
    <!-- /ko -->*@
@section Scripts{
    <script type="text/javascript">
        require(["FranchiseDashboard/Coupons.view", "common/confirmation.view"]);
        $("#btnDealsApprov").css("background-color", "#34b9c7");
    </script>
    <script>
        function getParameter(url, param) {
            if (url.indexOf('?') == -1)
                return 1;
            url = url.split('?');
            var pattern = new RegExp(param + '=(.*?)(;|&|$)', 'gi');
            return url[1].split(pattern)[1];
        }
    </script>
}
