@{
    ViewBag.Title = "Coupons For Approval";
}
<div class="row" id="marketingDealBindingSpot">
    <div class="col-lg-12" data-bind="visible: !$root.isEditorVisible()">
        <div class="row">
            <div class="col-lg-12"style="padding-bottom:16px;">
                @*<ol class="breadcrumb">
                        <li><a href="~/Dashboard/Index">&nbsp;</a></li>
                    </ol>*@
                <div class="clearfix">
                    <h1 class="pull-left" style="padding-left:7px;margin-bottom:10px;margin-top: 14px;font-size:24px;color:#fff">Marketing Deals and Stories</h1>
                    <img class="pull-right closecls" src="~/Content/Images/Close_Button.png" style="margin-top:14px;margin-right: 22px;" onclick="GotoHome();" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12" style="margin-left:6px;padding-right:37px;">
                <div class="main-box no-header clearfix">
                    <div class="main-box-body clearfix">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="marketingDealTable">
                                <thead>
                                    <tr>
                                        <th class="col-lg-2 th-pointer"><span id="4">Approved By<span></span></span></th>
                                        <th class="col-lg-2 th-pointer"><span id="4">Title<span></span></span> </th>

                                        @*<th class="col-lg-2 th-pointer"><span id="4">Swap Cost<span></span></span> </th>*@
                                        <th class="col-lg-2 th-pointer"><span id="5">Approval Date<span class="icon-up"></span></span></th>

                                        <th class="col-lg-1">&nbsp;</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- ko template: { name: 'adCampaignsLVTemplate' , foreach: marketingDeals } -->
                                    <!-- /ko -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div id="pagerDivForStore" class="pull-right">
                    <!-- ko with: pager -->
                    @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
                    <!-- /ko -->
                </div>
            </div>
        </div>
        <script id="adCampaignsLVTemplate" type="text/html">
            <tr style="cursor: pointer" data-bind="click:$root.onEditMarketingDeal">
                <td>
                    <p data-bind="text:approvedBy"></p>
                </td>
                <td>
                    <p data-bind="text:title"></p>
                </td>


                @*<td>
                        <p data-bind="text:swabCost"></p>
                    </td>*@
                <td>
                    <p data-bind="dateString:approvalDateTime,datePattern: 'DD/MM/YYYY'"></p>
                    @*<p>Coupon</p>*@
                </td>
                <td>
                    <a class="table-link" style="float: right">
                        <span class="fa-stack">
                            <i class="fa fa-square fa-stack-2x"></i>
                            <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                        </span>
                    </a>
                </td>
            </tr>
        </script>
    </div>
    @{
        Html.RenderPartial("~/Areas/Coupons/Views/Coupons/marketingDealeditor.cshtml");
    }
</div>
<!-- ko stopBinding: true -->
    @Html.Partial("~/Areas/Common/Views/Shared/_ConfirmationDialog.cshtml")
    <!-- /ko -->
@section Scripts{
    <script type="text/javascript">
        require(["FranchiseDashboard/MarketingDeals.view", "common/confirmation.view"]);
        $("#btnMarketingStories").css("background-color", "#34b9c7");
        $("#main_btnPannels").css("display", "none");
        $("#MarketobjDiv").css("display", "none");
        $(".hideInCoupons").css("display", "none");
        $("#topArea").css("display", "none");
        $("#divApprove").css("display", "none");
    </script>
    <script>
        function getParameter(url, param) {
            if (url.indexOf('?') == -1)
                return 1;
            url = url.split('?');
            var pattern = new RegExp(param + '=(.*?)(;|&|$)', 'gi');
            return url[1].split(pattern)[1];
        }
    </script>
}
