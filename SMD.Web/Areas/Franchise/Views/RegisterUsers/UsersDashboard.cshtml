@{
    ViewBag.Title = "Registered Users";
}
<div class="row" id="RegisterUsersBindingSpot">
    <div class="col-lg-12" data-bind="visible: !$root.isEditorVisible()">
        <div class="row">
            <div class="col-lg-12">
                <ol class="breadcrumb">
                    <li><a href="~/Dashboard/Index">&nbsp;</a></li>
                </ol>
                <div class="clearfix">
                    <h1 class="pull-left" style="padding-left:7px;color:#fff">Registered Users</h1>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12" style="margin-left:6px;padding-right:37px;">
                <div class="col-sm-2" style="float:left; margin-top:20px;margin-bottom:10px;">
                    <div class="filter-block" style="margin-right: -10px">
                        <div class="form-group ">
                            <input type="text" class="form-control " placeholder="Search..." data-bind="value: $root.searchFilterValue">
                            <i class="fa fa-search search-icon" data-bind="click: $root.getCampaignByFilter"></i>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="col-sm-2" style="float:left;margin-top:20px;margin-bottom:10px">
                    <select id="ddlStatus" class="form-control" style="float:right;height:36px;" data-bind="value : searchSelectedStatus, event:{ change: $root.getCampaignByFilter}">
                        <option value=" -1"> All</option>
                        <option value="1">Enable</option>
                        <option value="0">Disable</option>
                    </select>
                </div>
                <div class="main-box no-header clearfix">
                    <div class="main-box-body clearfix">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="registerUsersLVTable">
                                <thead>
                                    <tr>
                                        <th class="col-lg-3 th-pointer"><span id="3">Last Login Date<span></span></span> </th>
                                        <th class="col-lg-2 th-pointer"><span id="4">Name<span></span></span> </th>
                                        <th class="col-lg-3 th-pointer"><span id="2">E-mail<span></span></span> </th>
                                        <th class="col-lg-2 th-pointer"><span id="2">Company Name<span></span></span> </th>
                                        <th class="col-lg-2 th-pointer"><span id="4">Centz<span></span></span> </th>
                                        <th class="col-lg-2 th-pointer"><span id="6"><span>Status</span></span></th>
                                        <th class="col-lg-1">&nbsp;</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- ko template: { name: 'transferRateTemplate',foreach:registeredUsers} -->
                                    <!-- /ko -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div id="pagerDivForStore" class="pull-right">
                    <!-- ko with: pager -->
                    @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
                    <!-- /ko -->
                </div>
            </div>
        </div>
        <script id="transferRateTemplate" type="text/html">
            <tr style="cursor: pointer" data-bind="click:$root.onEditUSer">
                <td>
                    <p data-bind="text:lastLoginTime() !=null ?moment(lastLoginTime()).format('DD MMM YY h:mm a'):lastLoginTime"></p>
                </td>
                <td>
                    <p data-bind="text:fullname"></p>
                </td>
                <td>
                    <p data-bind="text:email"></p>
                </td>
                <td>
                    <p data-bind="text:companyName"></p>
                </td>
                <td>
                    <p data-bind="text:accountBalance"></p>
                </td>
                <td>
                    <p data-bind="text:status()==0||status()==null?'Disable':'Enable'"></p>
                </td>

                <td>
                    <a class="table-link" style="float: right;">
                        <span class="fa-stack">
                            <i class="fa fa-square fa-stack-2x"></i>
                            <i class="fa fa-pencil fa-stack-1x fa-inverse" data-bind="click:$root.onEditUSer"></i>
                        </span>
                    </a>
                </td>
            </tr>
        </script>
    </div>
    @{
        Html.RenderPartial("~/Areas/Franchise/Views/RegisterUsers/_registeredUserEditor.cshtml");
    }
</div>
<!-- ko stopBinding: true -->
    @Html.Partial("~/Areas/Common/Views/Shared/_ConfirmationDialog.cshtml")
    <!-- /ko -->
@section Scripts{
    <script type="text/javascript">
        require(["FranchiseDashboard/registeredUsers.view", "common/confirmation.view"]);
         $("#btnAppUsers").css("background-color", "#34b9c7");
    </script>
    <script>
        function getParameter(url, param) {
            if (url.indexOf('?') == -1)
                return 1;
            url = url.split('?');
            var pattern = new RegExp(param + '=(.*?)(;|&|$)', 'gi');
            return url[1].split(pattern)[1];
        }
    </script>
}
