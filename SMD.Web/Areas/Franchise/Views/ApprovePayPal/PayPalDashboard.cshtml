@{
    ViewBag.Title = "Transfer Rate";
}
<div class="row" id="PPApprovalBindingSpot">
    <div class="col-lg-12" data-bind="visible: !$root.isEditorVisible()">
        <div class="row">
            <div class="col-lg-12">
                <ol class="breadcrumb">
                    <li><a href="~/Dashboard/Index">&nbsp;</a></li>
                </ol>
                <div class="clearfix">
                    <h1 class="pull-left" style="padding-left:0px;">Transfer money to PayPal</h1>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="main-box no-header clearfix">
                    <div class="main-box-body clearfix">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="payPallApprovalLVTable">
                                <thead>
                                    <tr>
                                        <th class="col-lg-2 th-pointer"><span id="3">Requested Date<span></span></span> </th>
                                        @*<th class="col-lg-3 th-pointer"><span id="1">Company Name<span class="icon-down"></span></span></th>*@
                                        <th class="col-lg-3 th-pointer"><span id="2">E-mail<span></span></span> </th>
                                        <th class="col-lg-1 th-pointer"><span id="4">Centz<span></span></span> </th>
                                        <th class="col-lg-1 th-pointer"><span id="5"><span>$</span></span></th>
                                        <th class="col-lg-2 th-pointer"><span id="6"><span>Status</span></span></th>
                                        <th class="col-lg-1">&nbsp;</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- ko template: { name: 'transferRateTemplate' , foreach: payOutHistory } -->
                                    <!-- /ko -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div id="pagerDivForStore" class="pull-right">
                    <!-- ko with: pager -->
                    @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
                    <!-- /ko -->
                </div>
            </div>
        </div>
        <script id="transferRateTemplate" type="text/html">
            <tr style="cursor: pointer" data-bind="click:$root.onEditPayPallHistory">
                @*<td>
                    <p data-bind="text:companyName"></p>
                </td>*@
                <td>
                    <p data-bind="dateString:requestDateTime,datePattern: 'DD/MM/YYYY'"></p>
                </td>
                <td>
                    <p data-bind="text:email"></p>
                </td>
              
                <td>
                    <p data-bind="text:centzAmount"></p>
                </td>
                <td>
                    <p data-bind="text:dollarAmount"></p>
                </td>
                <td>
                    <p data-bind="text:stageOneStatus()==null?'Pending Approval':(stageOneStatus()==1 && stageTwoStatus()==null)?'Approved':(stageOneStatus()==2 && stageTwoStatus()==null)?'Rejected':(stageOneStatus()==1 && stageTwoStatus()==3)?'Pending Investigation':(stageOneStatus()==1 && stageTwoStatus()==4)?'Paid Out':stageTwoStatus"></p>
                </td>
                <td>
                    <a class="table-link" style="float: right;">
                        <span class="fa-stack">
                            <i class="fa fa-square fa-stack-2x"></i>
                            <i class="fa fa-pencil fa-stack-1x fa-inverse" data-bind="click:$root.onEditPayPallHistory"></i>
                        </span>
                    </a>
                </td>
            </tr>
        </script>
    </div>
    @{
        Html.RenderPartial("~/Areas/Franchise/Views/ApprovePayPal/_payPallEditorForApp.cshtml");
    }
</div>
@*<!-- ko stopBinding: true -->
    @Html.Partial("~/Areas/Common/Views/Shared/_ConfirmationDialog.cshtml")
    <!-- /ko -->*@
@section Scripts{
    <script type="text/javascript">
        require(["FranchiseDashboard/payPallApp.view", "common/confirmation.view"]);
        $("#btnAprroveTransfer").css("background-color", "#34b9c7");
    </script>
    <script>
        function getParameter(url, param) {
            if (url.indexOf('?') == -1)
                return 1;
            url = url.split('?');
            var pattern = new RegExp(param + '=(.*?)(;|&|$)', 'gi');
            return url[1].split(pattern)[1];
        }
    </script>
}
