@{
    ViewBag.Title = "Wallet Report";
}
<div class="row" id="walletreportBindingRoot">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-12">
                <ol class="breadcrumb">
                    <li><a href="~/Dashboard/Index">&nbsp;</a></li>
                </ol>
                <div class="clearfix">
                    <h1 class="pull-left" style="padding-left:0px;">Wallet history</h1>&nbsp;<span style="font-size:20px;">(Current balance :<span data-bind="text:$root.balance"></span> centz)</span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="main-box no-header clearfix">
                    <div class="main-box-body clearfix">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="adCampaignApprovalLVTable">
                                <thead>
                                    <tr>
                                        <th class="col-lg-4 th-pointer"><span id="4">Transaction Description<span class="icon-down"></span></span></th>
                                        <th class="col-lg-4 th-pointer"><span id="4">Transaction Date<span></span></span> </th>

                                        @*<th class="col-lg-2 th-pointer"><span id="4">Swap Cost<span></span></span> </th>*@
                                        <th class="col-lg-2 th-pointer"><span id="5">Centz<span ></span></span></th>

                                        <th class="col-lg-1">&nbsp;</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- ko template: { name: 'walletReportTemplate', foreach: walletReport} -->
                                    <!-- /ko -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script id="walletReportTemplate" type="text/html">
            <tr style="cursor: pointer">
                <td>
                    <p data-bind="text:description"></p>
                </td>
                <td>
                    <p data-bind="text:moment(transatinDate()).format('DD MMM YYYY,h:mm:ss a')"></p>
                </td>
                <td>
                    <p data-bind="text:creditAmount"></p>
                </td>
                <td>
                    <a class="table-link" style="float: right;display:none">
                        <span class="fa-stack">
                            <i class="fa fa-square fa-stack-2x"></i>
                            <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                        </span>
                    </a>
                </td>
            </tr>
        </script>
    </div>
</div>
@section Scripts{
    <script type="text/javascript">
        require(["Report/walletReport.view", "common/confirmation.view"]);
    </script>
    <script>
        function getParameter(url, param) {
            if (url.indexOf('?') == -1)
                return 1;
            url = url.split('?');
            var pattern = new RegExp(param + '=(.*?)(;|&|$)', 'gi');
            return url[1].split(pattern)[1];
        }
    </script>
}
