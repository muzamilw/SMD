
@{
    ViewBag.Title = "Index";
}
<div class="row" id="adsBinding">
    <div class="col-lg-12" data-bind="visible: !$root.isEditorVisible()">
        <div class="row">
            <div class="col-lg-12" id="topArea">
                <ol class="breadcrumb">
                    <li><a href="~/Dashboard/Index">&nbsp;</a></li>
                </ol>
                <div class="clearfix">
                    <h1 class="pull-left" style="padding-left:0px;">Manage Campaigns</h1>
                </div>
                <div class="row" style="margin-bottom:15px;">

                    <div class="pull-right top-page-ui" style="margin-right:5px;margin-bottom:5px;">

                        <div class="btn-group">
                            <button class="btn btn-primary" data-bind="click:$root.addNewCampaign">
                                Create Campaign
                            </button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="main-box no-header clearfix" style="padding-top:0px;">
                    <div class="main-box-body clearfix" style="padding-left:20px;padding-right:22px;">
                        <div class="tabsdescriptions" style="margin-left:0px;">
                            <p class="group-header-description"></p>
                        </div>
                        <div class="table-responsive" style="margin-right:-4px;">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>

                                        <th class="col-sm-2"><span>Campaign Name</span></th>
                                        <th class="col-sm-1"><span>Delivery</span></th>
                                        <th class="col-sm-1"><span>Results</span></th>
                                        <th class="col-sm-1"><span>Reach</span></th>
                                        <th class="col-sm-1"><span>Cost</span></th>
                                        <th class="col-sm-1"><span>Budget</span></th>
                                        <th class="col-sm-2"><span>Amount Spent</span></th>
                                        <th class="col-sm-2"><span>Schedule</span></th>
                                        <th class="col-sm-1">&nbsp;</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- ko template: { name: 'advertsTemplate' , foreach: $root.advertGridContent } -->
                                    <!-- /ko -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div id="pagerDivForStore" class="pull-right">
                    <!-- ko with: pager -->
                    @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
                    <!-- /ko -->
                </div>
            </div>
        </div>


    </div>
    @{
        Html.RenderPartial("~/Areas/Ads/Views/Ads/ManageCampaign.cshtml");
    }
</div>

<script id="advertsTemplate" type="text/html">
    <tr style="cursor: pointer">
     
        <td class="col-sm-2">
            <a href="#" class="store-user-link" data-bind="text: DisplayTitle"></a>

        </td>
        <td class="col-sm-1">
            <span class="pull-left">
                <i class="fa fa-circle" data-bind="style: { color: StatusColor }"></i>
            </span>
            <span class="pull-left " data-bind="text: StatusName">
            </span>
        </td>
        <td class="col-sm-1">
            <span class="">&nbsp;</span>
        </td>
        <td class="col-sm-1"><span class="" data-bind="text: ResultClicks"></span></td>
        <td class="col-sm-1">
            <span class="">&nbsp;</span>
        </td>
        <td class="col-sm-1"><span class="" data-bind="text: MaxBudget"></span></td>
        <td class="col-sm-2"><span class="" data-bind="text: AmountSpent"></span></td>
        <td class="col-sm-2"><span class="" data-bind="text: StartDateTime"></span></td>
       
        <td class="col-sm-2">
            <!-- ko if: Status == 3 -->
            <div class="onoffswitch" style="margin-right:0px;">
                <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" id="switchDisplayTaxable" data-bind="checked: $root.selectedStore().isDeliveryTaxAble">
                <label class="onoffswitch-label" for="switchDisplayTaxable">
                    <div class="onoffswitch-inner"></div>
                    <div class="onoffswitch-switch"></div>
                </label>
            </div>
            <!-- /ko -->
            &nbsp;
        </td>
        
       
    </tr>
</script>
@section Scripts{
<script src="~/Scripts/jquery.tokenize.js"></script>
    <script type="text/javascript">
        require(["ads/ads.view"]);


        $(document).ready(function () {
            
            $('#tokenizeCountries').tokenize({
                placeholder: 'Add country',
                onAddToken: function (value, text, e) {

                    $(".Token .Close").click();

                    var count = "count_" + $('#coun_token_cnt').children().length + 1;
                    var htmlToAppend = '<div class="lang_newcnt"  id="' + count + '"><input type="text"  class="form-control lang_nr_box" readonly="readonly" value=' + text + '><a id="deleteToken' + count + '" onclick=RemoveCountryToken("' + count + '"); title="Delete" class="lang_del"> <i class="fa fa-times "></i></a></div>';
                   
                    $("#coun_token_cnt").css("display", "block");
                    $("#coun_token_cnt").append(htmlToAppend);
                }
            });
            $('#coun_token_cnt').next().next().css("display", "none");


            $('#tokenizeLanguages').tokenize({
                placeholder: 'Enter a language',
                onAddToken: function (value, text, e) {

                    $(".Token .Close").click();

                    var count = "lang_"+ $('#lang_token_cnt').children().length + 1;
                    var htmlToAppend = '<div class="lang_newcnt" id="' + count + '"><input type="text"   class="form-control lang_nr_box" readonly="readonly" value=' + text + '><a id="deleteToken' + count + '" onclick=RemoveLanguageToken("' + count + '"); title="Delete" class="lang_del"> <i class="fa fa-times "></i></a></div>';
                  
                    $("#lang_token_cnt").css("display", "block");
                    $("#lang_token_cnt").append(htmlToAppend);
                }
            });

        });

        function RemoveLanguageToken(tokenId) {

            $("#" + tokenId).remove();
            if ($('#lang_token_cnt').is(':empty')) {
                $("#lang_token_cnt").css("display", "none");
            }
          
        }

        function RemoveCountryToken(tokenId) {

            $("#" + tokenId).remove();
            if ($('#coun_token_cnt').is(':empty')) {
                $("#coun_token_cnt").css("display", "none");
            }

        }
    </script>


}