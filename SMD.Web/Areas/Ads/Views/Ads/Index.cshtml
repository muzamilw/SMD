@{
    ViewBag.Title = "Index";
}

<script src="http://maps.google.com/maps/api/js?sensor=false"></script>
<div class="row" id="adsBinding">
    <div class="col-lg-12" data-bind="visible: !$root.isEditorVisible()">
        <div class="row">
            <div class="col-md-12" id="topArea">
                <div class="social-box-wrapper">

                    <div class="social-box col-lg-3 col-sm-6 col-xs-6  estimates" style="cursor:pointer;" title="Pending Estimates">

                        <div class="clearfix">
                            <span class="social-count">£1024.00</span><br />
                            <span class="social-action">All time spend</span>
                        </div>
                    </div>

                    <div class="social-box col-lg-3 col-sm-6 col-xs-6  facebook" style="cursor:pointer;" title="Pending Orders">

                        <div class="clearfix">
                            <span class="social-count">3405</span><br />
                            <span class="social-action">Games and Ads Delivered</span>
                        </div>

                    </div>

                    <div class="social-box col-lg-3 col-sm-6 col-xs-6  twitter" style="cursor:pointer;" title="In Production">

                        <div class="clearfix">
                            <span class="social-count">2100</span><br />
                            <span class="social-action">Vouchers Accepted</span>
                        </div>

                    </div>

                    <div class="social-box col-lg-3 col-sm-6 col-xs-6  google" style="cursor:pointer;" title="Completed">

                        <div class="clearfix">
                            <span class="social-count">£125.00</span><br />
                            <span class="social-action">Paid out to customers</span>
                        </div>

                    </div>

                </div>
            </div>
         
        </div>
        <div class="row">
            <div class="col-lg-12">
                <!-- ko template: { name: 'filterTemplate' } -->
                <!-- /ko -->
                <div data-bind="visible: $root.campaignGridContent().length > 0">
                   
                    <div class="main-box no-header clearfix" style="padding-top:0px;">
                        <div class="main-box-body clearfix" style="padding-left:20px;padding-right:22px;">
                            <div class="tabsdescriptions" style="margin-left:0px;">
                                <p class="group-header-description"></p>
                            </div>
                            <div class="table-responsive" style="margin-right:-4px;">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>

                                            <th class="col-sm-2"><span>Name</span></th>
                                           
                                            @*<th class="col-sm-1"><span>Results</span></th>
    <th class="col-sm-1"><span>Reach</span></th>
    <th class="col-sm-1"><span>Cost</span></th>
    <th class="col-sm-1"><span>Budget</span></th>*@
                                            <th class="col-sm-2"><span>Start Date</span></th>
                                            <th class="col-sm-2"><span>End Date</span></th>
                                            <th class="col-sm-1"><span>Status</span></th>
                                            <th class="col-sm-2"><span>Spent</span></th>
                                          
                                            <th class="col-sm-1">&nbsp;</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <!-- ko template: { name: 'advertsTemplate' , foreach: $root.campaignGridContent } -->
                                        <!-- /ko -->
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div id="pagerDivForStore" class="pull-right">
                        <!-- ko with: pager -->
                        @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
                        <!-- /ko -->
                    </div>
                    <div class="clearfix">

                    </div>
                </div>
                <div data-bind="visible: $root.campaignGridContent().length == 0" style="display:none;">
                    <div class="main-box no-header clearfix" style="padding:20px;">
                        No campaigns found.
                    </div>
                </div>
            </div>
            
        </div>


    </div>
    @{
        Html.RenderPartial("~/Areas/Ads/Views/Ads/ManageCampaign.cshtml");
    }
</div>

<script id="advertsTemplate" type="text/html">
    <tr style="cursor: pointer">

        <td class="col-sm-2">
            <a href="#" class="store-user-link" data-bind="text: DisplayTitle,click:$root.onEditCampaign"></a>

        </td>
       
        @*<td class="col-sm-1">
            <span class="">&nbsp;</span>
        </td>
        <td class="col-sm-1"><span class="" data-bind="text: ResultClicks"></span></td>
        <td class="col-sm-1">
            <span class="">&nbsp;</span>
        </td>
        <td class="col-sm-1"><span class="" data-bind="text: MaxBudget"></span></td>*@
        <td class="col-sm-2"><span class="" data-bind="text: StartDateTime"></span></td>
        <td class="col-sm-2"><span class="" data-bind="text: EndDateTime"></span></td>
        <td class="col-sm-2">
            <!-- ko if: Status() == 1-->
            <div class="text-left statusbg" style="background:#6D6EFA;    width: 47px;">
                <span data-bind="text: StatusValue">
                </span>
            </div>
            <!-- /ko -->
            <!-- ko if: Status() == 2-->
            <div class="text-left statusbg" style="background:#fc0;">
                <span data-bind="text: StatusValue">
                </span>
            </div>
            <!-- /ko -->
            <!-- ko if:  Status() == 3-->
            <div class="text-left statusbg" style="background:#37c675;">
                <span data-bind="text: StatusValue">
                </span>
            </div>
            <!-- /ko -->
            <!-- ko if: Status() == 4-->
            <div class="text-left statusbg" style="background:#fd008e;">
                <span data-bind="text: StatusValue">
                </span>
            </div>
            <!-- /ko -->
            <!-- ko if: Status() == 5-->
            <div class="text-left statusbg" style="background:#c8e392;">
                <span data-bind="text: StatusValue">
                </span>
            </div>
            <!-- /ko -->
            <!-- ko if: Status() == 6-->
            <div class="text-left statusbg" style="background:red;">
                <span data-bind="text: StatusValue">
                </span>
            </div>
            <!-- /ko -->
        </td>
        <td class="col-sm-2"><span class="" data-bind="text: AmountSpent"></span></td>
        

        <td class="col-sm-2">
          
            <!-- ko if: Status() == 1 || Status() == 2|| Status() == 3 || Status() == 4-->
            <a class="table-link" style="float: right">
                <span class="fa-stack">
                    <i class="fa fa-square fa-stack-2x"></i>
                    <i class="fa fa-pencil fa-stack-1x fa-inverse" data-bind="click:$root.onEditCampaign" ></i>
                </span>
            </a>
            <!-- /ko -->
            &nbsp;
        </td>


    </tr>
</script>
@* Filter Template *@
<script id="filterTemplate" type="text/html">
    <div class="filter-body" id="filter">
        <div class="col-lg-3">
            <span style="    font-size: 24px;">My Ad Campaigns</span>
        </div>
        <div class="col-lg-3 text-left">
            <form data-bind="submit: $root.getCampaignByFilter">
                <div class="filter-block" style="margin-right: -10px">
                    <div class="form-group ">
                        <input type="text" class="form-control" placeholder="Search..." data-bind="value: $root.searchFilterValue">
                        <i class="fa fa-search search-icon" data-bind="click: $root.getCampaignByFilter"></i>
                    </div>
                </div>
                <div class="clearfix"></div>
            </form>
        </div>
        <div class="col-lg-6 text-right">
            <div class="btn-group">
                <button class="btn ctCampaign" data-bind="click:$root.addNewCampaign">
                    Create Campaign
                </button>
            </div>

        </div>
       <div class="clearfix">

       </div>
    </div>
</script>
