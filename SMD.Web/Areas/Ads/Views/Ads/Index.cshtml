@{
    ViewBag.Title = "Index";
    string adminClasses = "";
    string userClasses = "";
}

<link href="~/Content/metroUI/css/metro.css" rel="stylesheet" />
<link href="~/Content/CSS/custom.css" rel="stylesheet" />
<script src="~/Content/metroUI/js/metro.js"></script>
<script src="~/Content/metroUI/js/prettify/run_prettify.js"></script>
<script src="http://maps.google.com/maps/api/js?sensor=false"></script>
@if (!User.IsInRole("User"))
{
    userClasses = "displayNone";
}
else
{
    adminClasses = "displayNone";
}

<div class="row" id="adsBinding">
    <div class="col-lg-12" data-bind="visible: $root.isListVisible()">

        <div class="row">
            <div class="col-lg-12" style="padding-left:0px;padding-right:0px;">



                <!-- ko template: { name: 'filterTemplate' } -->
                <!-- /ko -->
                <div data-bind="visible: $root.campaignGridContent().length > 0">

                    <div class="main-box no-header clearfix" style="padding-top:0px;">
                        <div class="main-box-body clearfix" style="padding-left:20px;padding-right:22px;">
                            <div class="tabsdescriptions" style="margin-left:0px;">
                                <p class="group-header-description"></p>
                            </div>
                            <div class="table-responsive" style="margin-right:-4px;">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr style="height:25px;">

                                            <th class="col-sm-3" style="vertical-align:top"><span class="GridHeaderFont_size">Campaign Name</span></th>
                                            <th class="col-sm-1" style="vertical-align:top"><span class="GridHeaderFont_size">Type</span></th>
                                            <th class="col-sm-2" style="vertical-align:top"><span class="GridHeaderFont_size">Locations</span></th>

                                            <th class="col-sm-1" style="vertical-align:top"><span class="GridHeaderFont_size">PPCV</span></th>




                                            <th class="col-sm-2" style="vertical-align:top">
                                                <span class="GridHeaderFont_size">Views</span><br />
                                                <span style="color:darkgray;font-size:10px;">Today</span>
                                                <span style="color:darkgray;font-size:10px;">Yesterday</span>
                                                <span style="color:darkgray;font-size:10px;">All Time</span>

                                            </th>
                                            <th class="col-sm-1" style="vertical-align:top"><span class="GridHeaderFont_size">Daily Cap</span></th>
                                            <th class="col-sm-1" style="vertical-align:top"><span style="white-space:nowrap;" class="GridHeaderFont_size">Total Spent</span></th>
                                            <th class="col-sm-1" style="vertical-align:top"><span class="GridHeaderFont_size">Status</span></th>
                                            @*<th class="col-sm-2"><span class="@userClasses">Spent</span><span class="@adminClasses">Created by</span></th>*@

                                            <th class="col-sm-1">&nbsp;</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <!-- ko template: { name: 'advertsTemplate' , foreach: $root.campaignGridContent } -->
                                        <!-- /ko -->
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div id="pagerDivForStore" class="pull-right">
                        <!-- ko with: pager -->
                        @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
                        <!-- /ko -->
                    </div>
                    <div class="clearfix">

                    </div>
                </div>
                <div data-bind="visible: $root.campaignGridContent().length == 0" style="display:none;">
                    <div class="main-box no-header clearfix" style="padding:20px;" data-bind="visible:!isDisplayCouponsAds()">
                        No campaigns found.
                    </div>
                    <div class="main-box no-header clearfix" style="padding:20px;" data-bind="visible:isDisplayCouponsAds()">
                        No coupon found.
                    </div>
                </div>
            </div>

        </div>
        <div class="row">


            <div class="col-lg-3 col-sm-3" style="float:left;">


            </div>
            <div class="col-lg-6 col-sm-6" style="float:left;padding-left:50px; display:none;">

                <button class="btn  btn-success btnAdsCampaign" style="width:24%;float:left;padding:0px;" id="btnSubmitForApproval" data-bind="click:$root.ShowCouponPromotions">Coupons</button>
                <button class="btn  btn-success btnAdsCampaign @adminClasses" style="width:24%;float:left;padding:0px;" id="btnSubmitForApproval" data-bind="click:gotoManageUsers">Manage Users</button>
                <button class="btn  btn-success btnAdsCampaign" style="width:24%;float:left;padding:0px;" id="btnSubmitForApproval" data-bind="click:gotoProfile">Marketing Info</button>
            </div>


            <div class="col-lg-2 col-sm-2" style="float:left;">


            </div>






        </div>

    </div>
    @{
        Html.RenderPartial("~/Areas/Ads/Views/Ads/ManageCampaign.cshtml");
    }
</div>

<script id="advertsTemplate" type="text/html">
    <tr style="cursor: pointer">

        <td class="col-sm-3" >
            <a href="#" class="store-user-link" data-bind="text: CampaignName() ,click:$root.onEditCampaign"></a>
            <br />
            <span style="color:darkgray;font-size:11px;" data-bind="text:  ApprovalDateTime() ? 'Start Date : ' +  ApprovalDateTime() : 'Not Started'"></span>

        </td>

        @*<td class="col-sm-1">
                <span class="">&nbsp;</span>
            </td>
            <td class="col-sm-1"><span class="" data-bind="text: ResultClicks"></span></td>
            <td class="col-sm-1">
                <span class="">&nbsp;</span>
            </td>
            <td class="col-sm-1"><span class="" data-bind="text: MaxBudget"></span></td>*@
        <td class="col-sm-1">

            <!-- ko if: Type() == 1-->
            <span class="">Video</span>
            <!-- /ko -->
            <!-- ko if: Type() == 2-->
            <span class="">Link</span>
            <!-- /ko -->
            <!-- ko if: Type() == 3-->
            <span class="">Upload Image</span>
            <!-- /ko -->
            <!-- ko if: Type() == 4-->
            <span class="">Game</span>
            <!-- /ko -->
        </td>
        <td class="col-sm-2">
            <span data-bind="text: Locationss"></span>
        </td>
        <td class="col-sm-1">
            <span data-bind="text: '$'+ ClickRate().toFixed(2)"></span>
        </td>
        <td class="col-sm-2">

            <span data-bind="text: viewCountToday" style="display:inline-block;width:35px;"></span>
            <span data-bind="text: viewCountYesterday" style="display:inline-block;width:60px;"></span>
            <span data-bind="text: viewCountAllTime" style="display:inline-block;width:47px;"></span>



        </td>
        <td class="col-sm-1">
            <span data-bind="text: MaxDailyBudget"></span>
        </td>
        <td class="col-sm-1"><span class="@userClasses" data-bind="text: AmountSpent() ? '$'+ AmountSpent().toFixed(2) : '$'+ 0"></span></td>
        <td class="col-sm-2">
            <!-- ko if: Status() == 1-->
            <div class="text-left statusbg" style="background:#6D6EFA;    width: 125px;">
                <span data-bind="text: StatusValue">
                </span>
            </div>
            <!-- /ko -->
            <!-- ko if: Status() == 2-->
            <div class="text-left statusbg" style="background:#fc0;width: 125px">
                <span data-bind="text: StatusValue">
                </span>
            </div>
            <!-- /ko -->
            <!-- ko if:  Status() == 3-->
            <div class="text-left statusbg" style="background:#37c675;    width: 125px;">
                <span data-bind="text: StatusValue">
                </span>
            </div>
            <!-- /ko -->
            <!-- ko if: Status() == 4-->
            <div class="text-left statusbg" style="background:#fd008e;width: 125px">
                <span data-bind="text: StatusValue">
                </span>
            </div>
            <!-- /ko -->
            <!-- ko if: Status() == 5-->
            <div class="text-left statusbg" style="background:#c8e392;width: 125px">
                <span data-bind="text: StatusValue">
                </span>
            </div>
            <!-- /ko -->
            <!-- ko if: Status() == 6-->
            <div class="text-left statusbg" style="background:red;width: 125px">
                <span data-bind="text: StatusValue">
                </span>
            </div>
            <!-- /ko -->
            <!-- ko if: Status() == 7-->
            <div class="text-left statusbg" style="background:red;width: 125px">
                <span data-bind="text: StatusValue">
                </span>
            </div>
            <!-- /ko -->
            <!-- ko if: Status() == 8-->
            <div class="text-left statusbg" style="background:#fc0;width: 125px">
                <span data-bind="text: StatusValue">
                </span>
            </div>
            <!-- /ko -->
            <!-- ko if: Status() == 9-->
            <div class="text-left statusbg" style="background:red;width: 125px">
                <span data-bind="text: StatusValue">
                </span>
            </div>
            <!-- /ko -->
            <span class="@adminClasses" data-bind="text: CreatedBy"></span>
        </td>



        <td class="col-sm-2" style="padding-top:23px;">

            <!-- ko if: Status() == 1 ||  Status() == 3 || Status() == 4 || Status() == 7|| Status() == 9-->
            <a class="table-link" style="float: right">
                <span class="fa-stack">
                    <i class="fa fa-square fa-stack-2x"></i>
                    <i class="fa fa-pencil fa-stack-1x fa-inverse" data-bind="click:$root.onEditCampaign"></i>
                </span>
            </a>
            <!-- /ko -->
            &nbsp;
        </td>


    </tr>
</script>
@* Filter Template *@
<script id="filterTemplate" type="text/html">
    <div class="filter-body" id="filter" data-bind="visible:!isDisplayCouponsAds()">

        <div class="row">


            <div class="col-sm-12" style="float: left; margin-bottom:20px;">
                <br />
                <span style="font-size: 24px;" class="Theme_standard_clr" data-bind="text:$root.MainHeading"></span><br />
                <span style="font-size: 14px;" class="Theme_subheading-Clr" data-bind="text:$root.SubHeading"></span>  &nbsp; &nbsp; &nbsp; <span class="red bold rightAlign"> Watch Video <img src="/Images/youtube_play.JPG" height="25px" /> </span>   </span><br />
            </div>


        </div>

        <div class="row">


            <form data-bind="submit: $root.getCampaignByFilter">
                <div class="col-sm-3" style="float:left;">

                    <div class="filter-block" style="margin-right: -10px">
                        <div class="form-group ">
                            <input type="text" class="form-control " placeholder="Search..." data-bind="value: $root.searchFilterValue">
                            <i class="fa fa-search search-icon" data-bind="click: $root.getCampaignByFilter"></i>
                        </div>



                    </div>
                    <div class="clearfix"></div>

                </div>

                <div class="col-sm-3" style="float:left;">
                    <select id="ddlStatus" class="form-control" style="float:right;height:36px;" data-bind="value : SearchSelectedStatus, event:{ change: $root.getCampaignByFilter}">
                        <option value="0">All Statuses</option>

                    </select>
                </div>
            </form>
            <div class="col-sm-3" style="float:right;margin-top:2px; text-align:right">
                <button class="btn btn-primary" data-bind="click:$root.addNewCampaign,visible:!$root.isDisplayCouponsAds()">
                    Create New Campaign
                </button>
                <button class="btn btn-primary" style="display:none;" data-bind="click:$root.addNewCampaign,visible:$root.isDisplayCouponsAds()">
                    Create Coupon
                </button>


            </div>
            <div class="clearfix">

            </div>
        </div>

    </div>
</script>
