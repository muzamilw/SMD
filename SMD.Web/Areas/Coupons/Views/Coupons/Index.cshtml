@{
    ViewBag.Title = "Index";
    string adminClasses = "";
    string userClasses = "";
}

<link href="~/Content/metroUI/css/metro.css" rel="stylesheet" />
<link href="~/Content/CSS/custom.css" rel="stylesheet" />
<script src="~/Content/metroUI/js/metro.js"></script>
<script src="~/Content/metroUI/js/prettify/run_prettify.js"></script>
<script src="http://maps.google.com/maps/api/js?sensor=false"></script>
@if (!User.IsInRole("User"))
{
    userClasses = "displayNone";
}
else
{
    adminClasses = "displayNone";
}
<div class="row" id="CouponsBinding">
    <div class="col-lg-12" data-bind="visible: $root.isListVisible()">
        <div class="row" id="topArea" style="margin-bottom:15px;">
           


                <div class="row">

                    <div class="col-sm-4 " style="float:left;">
                        <button class="btn  btn-success btnAdsCampaign" style="float: left; width: 33%; height: 66px; margin-right: 15px; white-space: normal; display: inline-block;" id="btnSubmitForApproval" data-bind="click:$root.ShowAdCampaigns">Video Campaigns</button>
                       <button class="btn  btn-warning" style="float:left;width:34%;height:66px;white-space:normal;" data-bind="click:$root.ShowCouponPromotions">Coupon Promotions</button>

                    </div>

                    <div class="col-sm-4">

                    </div>

                </div>
                

               

        </div>
        <div class="row">
            <div class="col-lg-12" style="padding-left:0px;padding-right:0px;">
              
                <!-- heading-->
                <div class="row filter-body">


                    <div class="col-sm-3" style="float: left;">

                        <span style="font-size: 24px;">Coupon Promotions</span><br />
                        <span style="font-size: 14px;">Paid coupon promotions are listed for whole one calendar month. Submission fee includes unlimited issuing and redemption at all branches.</span>
                    </div>

                    <div class="col-sm-3">


                    </div>
                    <div class="col-sm-2">



                    </div>
                    <div class="col-sm-4" style="text-align:right !important;">

                     <button class="btn btn-primary" data-bind="click:$root.addNewCampaign">
                            Create Coupon
                        </button>

                    </div>


                </div>

                <!-- ko template: { name: 'filterTemplate' } -->
                <!-- /ko -->
                <div data-bind="visible: $root.campaignGridContent().length > 0">

                    <div class="main-box no-header clearfix" style="padding-top:0px;">
                        <div class="main-box-body clearfix" style="padding-left:20px;padding-right:22px;">
                            <div class="tabsdescriptions" style="margin-left:0px;">
                                <p class="group-header-description"></p>
                            </div>
                            <div class="table-responsive" style="margin-right:-4px;">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>

                                            <th class="col-sm-3"><span>Campaign Name</span></th>

                                            @*<th class="col-sm-1"><span>Results</span></th>
                                                <th class="col-sm-1"><span>Reach</span></th>
                                                <th class="col-sm-1"><span>Cost</span></th>
                                                <th class="col-sm-1"><span>Budget</span></th>*@
                                            <th class="col-sm-2"><span></span></th>
                                            <th class="col-sm-2">
                                                <span >Views</span>
                                                <span >Taken Count</span>
                                            </th>
                                            <th class="col-sm-1"><span>Status</span></th>
                                            @*<th class="col-sm-2"><span class="@userClasses">Spent</span><span class="@adminClasses">Created by</span></th>*@

                                            <th class="col-sm-1">&nbsp;</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <!-- ko template: { name: 'advertsTemplate' , foreach: $root.campaignGridContent } -->
                                        <!-- /ko -->
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div id="pagerDivForStore" class="pull-right">
                        <!-- ko with: pager -->
                        @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")
                        <!-- /ko -->
                    </div>
                    <div class="clearfix">

                    </div>
                </div>
                <div data-bind="visible: $root.campaignGridContent().length == 0" style="display:none;">
                   <div class="main-box no-header clearfix" style="padding:20px;" >
                        No coupon found.
                    </div>
                </div>
            </div>

        </div>
        <div class="row">


            <div class="col-lg-3 col-sm-3" style="float:left;">


            </div>
            <div class="col-lg-6 col-sm-6" style="float:left;padding-left:50px; display:none;">

                <button class="btn  btn-success btnAdsCampaign" style="width:24%;float:left;padding:0px;" id="btnSubmitForApproval" data-bind="click:$root.ShowCouponPromotions">Coupons</button>
                <button class="btn  btn-success btnAdsCampaign @adminClasses" style="width:24%;float:left;padding:0px;" id="btnSubmitForApproval" data-bind="click:gotoManageUsers">Manage Users</button>
                <button class="btn  btn-success btnAdsCampaign" style="width:24%;float:left;padding:0px;" id="btnSubmitForApproval" data-bind="click:gotoProfile">Marketing Info</button>
            </div>


            <div class="col-lg-2 col-sm-2" style="float:left;">


            </div>






        </div>

    </div>
    @{
        Html.RenderPartial("~/Areas/Coupons/Views/Coupons/ManageCoupon.cshtml");
    }
</div>

<script id="advertsTemplate" type="text/html">
    <tr style="cursor: pointer">

        <td class="col-sm-3">
            <a href="#" class="store-user-link" data-bind="text: CampaignName,click:$root.onEditCampaign"></a>

        </td>

        @*<td class="col-sm-1">
                <span class="">&nbsp;</span>
            </td>
            <td class="col-sm-1"><span class="" data-bind="text: ResultClicks"></span></td>
            <td class="col-sm-1">
                <span class="">&nbsp;</span>
            </td>
            <td class="col-sm-1"><span class="" data-bind="text: MaxBudget"></span></td>*@
        <td class="col-sm-2">
  
            <!-- ko if: Type() == 1-->
            <span class="">Video</span>
            <!-- /ko -->
            <!-- ko if: Type() == 2-->
            <span class="">Link</span>
            <!-- /ko -->
            <!-- ko if: Type() == 3-->
            <span class="">Upload Image</span>
            <!-- /ko -->
            <!-- ko if: Type() == 4-->
            <span class="">Game</span>
            <!-- /ko -->
        </td>
        <td class="col-sm-2">
            <span class="" data-bind=""></span>
            <span data-bind="text: CouponTakenCount"></span>
        </td>
        <td class="col-sm-2">
            <!-- ko if: Status() == 1-->
            <div class="text-left statusbg" style="background:#6D6EFA;    width: 47px;">
                <span data-bind="text: StatusValue">
                </span>
            </div>
            <!-- /ko -->
            <!-- ko if: Status() == 2-->
            <div class="text-left statusbg" style="background:#fc0;">
                <span data-bind="text: StatusValue">
                </span>
            </div>
            <!-- /ko -->
            <!-- ko if:  Status() == 3-->
            <div class="text-left statusbg" style="background:#37c675;    width: 47px;">
                <span data-bind="text: StatusValue">
                </span>
            </div>
            <!-- /ko -->
            <!-- ko if: Status() == 4-->
            <div class="text-left statusbg" style="background:#fd008e;">
                <span data-bind="text: StatusValue">
                </span>
            </div>
            <!-- /ko -->
            <!-- ko if: Status() == 5-->
            <div class="text-left statusbg" style="background:#c8e392;">
                <span data-bind="text: StatusValue">
                </span>
            </div>
            <!-- /ko -->
            <!-- ko if: Status() == 6-->
            <div class="text-left statusbg" style="background:red;">
                <span data-bind="text: StatusValue">
                </span>
            </div>
            <!-- /ko -->
            <!-- ko if: Status() == 7-->
            <div class="text-left statusbg" style="background:red;">
                <span data-bind="text: StatusValue">
                </span>
            </div>
            <!-- /ko -->
            <!-- ko if: Status() == 8-->
            <div class="text-left statusbg" style="background:#fc0;">
                <span data-bind="text: StatusValue">
                </span>
            </div>
            <!-- /ko -->
            <!-- ko if: Status() == 9-->
            <div class="text-left statusbg" style="background:red;">
                <span data-bind="text: StatusValue">
                </span>
            </div>
            <!-- /ko -->
        </td>
        <td class="col-sm-1"><span class="@userClasses" data-bind="text: AmountSpent"></span><span class="@adminClasses" data-bind="text: CreatedBy"></span></td>


        <td class="col-sm-2">

            <!-- ko if: Status() == 1 ||  Status() == 3 || Status() == 4 || Status() == 7|| Status() == 9-->
            <a class="table-link" style="float: right">
                <span class="fa-stack">
                    <i class="fa fa-square fa-stack-2x"></i>
                    <i class="fa fa-pencil fa-stack-1x fa-inverse" data-bind="click:$root.onEditCampaign"></i>
                </span>
            </a>
            <!-- /ko -->
            &nbsp;
        </td>


    </tr>
</script>
