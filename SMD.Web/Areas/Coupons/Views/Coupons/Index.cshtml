        require(["Coupons/Coupons.view", "common/stripeChargeCustomer.view", "common/confirmation.view", "PhraseLibrary/phraseLibrary.view"]);
        $("#btnCoupons").css("background-color", "#93bf47");
       
        $("#panelArea").css("display", "block");
    </script>
