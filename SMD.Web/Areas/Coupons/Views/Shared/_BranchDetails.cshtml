<div class="modal fade my-modal" id="branchCategoryDialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Edit Role and Rights</h4>
            </div>
            <div class="row">
                <div class="col-lg-12 form-horizontal outerDiv-Padding">
                    <div class="form-group">
                        <div class="col-sm-3 text-right">
                            <label class="control-label text-right tooltip-float">Role Title</label>
                        </div>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="roleTitle" placeholder="Enter Role Title" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-3 text-right">
                            <label class="control-label text-right tooltip-float">Description</label>
                        </div>
                        <div class="col-sm-6">
                            <textarea class="form-control" rows="3" id="txtDesc" placeholder="Enter Description"></textarea>
                        </div>
                    </div>
                    <div class="form-group" style="margin-bottom: 0; padding-left: 0">
                        <div class="col-sm-1">
                        </div>
                        <div class="col-sm-5" style="padding-left: 0">
                            <label>Select Rights</label>
                        </div>
                        <div class="col-sm-5 text-right" style="padding-right: 44px;">
                            <input type="checkbox" class="bigcheckbox" style="float:right;" />
                        </div>
                        <div class="col-sm-1">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-1 col-lg-1"></div>
                        <div id="nestable2" class="col-sm-10 col-lg-10" style="border:1px solid #eeeeee;padding-right:15px;padding-left:15px; padding-bottom:20px;min-height:175px; max-height:200px;overflow-y:scroll;">
                            <ol id="productCategoryDialogCategories" class="dd-list">
                               
                            </ol>
                        </div>
                        <div class="col-sm-1 col-lg-1"></div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
